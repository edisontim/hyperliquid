{
	"compilerOptions": {
	  "target": "esnext",
	  "module": "ESNext",
	  "declaration": true,
	  "outDir": "./dist",
	  "sourceMap": true,
	  "moduleResolution": "node",
	  "resolveJsonModule": true,
	  "skipLibCheck": true,
	  "strictNullChecks": true,
	  "esModuleInterop": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist", "**/*.test.ts"]
  }